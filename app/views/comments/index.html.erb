<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>User</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.text %></td>
        <td><%= comment.user.display_name %></td>
        <td><%= link_to 'Edit', edit_polymorphic_path([comment.picture, comment]) %></td>
        <td><%= link_to 'Delete', polymorphic_path([comment.picture, comment]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_picture_comment_path %> |
<%= link_to 'Back', @picture %>
